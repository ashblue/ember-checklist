<form {{action 'register' on='submit'}}>
    <div class="form-group">
        <label for="email">Email</label>
        {{input value=email type="email" class="form-control"}}
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        {{input value=password class='form-control' type='password'}}
    </div>
    <div class="form-group">
        <label for="password_confirmation">Password Confirmation</label>
        {{input value=password_confirmation class='form-control' type='password'}}
    </div>
    <button type="submit" class="btn btn-default">Login</button>
</form>

{{#if errorMessage}}
    <p>
        <strong>Registration Failed</strong><br/>
        <code>
            {{#each errorMessage as |error|}}
                {{error}}<br/>
            {{/each}}
        </code>
    </p>
{{/if}}